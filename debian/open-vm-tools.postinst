#!/bin/sh

set -e

case "${1}" in
	configure)
		if [ -f /etc/modprobe.d/open-vm-tools.conf ]
		then
			rm -f /etc/modprobe.d/open-vm-tools.conf
		fi

		if [ -x /sbin/udevadm ]
		then
			udevadm trigger
		fi
		;;

	abort-upgrade|abort-remove|abort-deconfigure)

		;;

	*)
		echo "postinst called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
